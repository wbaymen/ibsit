{% extends "AppBundle::layout.html.twig" %}
{% block main_content %}
  {{ parent() }}
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">{{ 'app.module.questions'|trans({}, 'AppBundle') }}</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <table id="data_table" class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>Text</th>
              <th>Text (en)</th>
              <th>Response Type</th>
              <th>Position</th>
              <th>Questionnaire</th>
              <th>Mode</th>
              <th> </th>
            </tr>
            </thead>
            <tbody>
            {% for question in questions %}
              <tr class="odd gradeX">
                <td>{{ question.questiontext }}</td>
                <td>{{ question.questiontexten }}</td>
                <td>{{ question.responsetype }}</td>
                <td>{{ question.position }}</td>
                <td>{% if(question.questionnaire!=NULL) %}
                      {{ question.questionnaire.name }}
                    {% endif %}
                </td>
                <td>{{ question.mode }}</td>
                <td> {#
                    % include 'TrituxTestBundle:Default:actions.html.twig' with { 'object': box, 'route_edit': 'box_edit','delete': 'box' } %
                #}

                </td>
              </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
              <th>Text</th>
              <th>Text (en)</th>
              <th>Response Type</th>
              <th>Position</th>
              <th>Questionnaire</th>
              <th>Mode</th>
              <th> </th>
            </tr>
            </tfoot>
          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
      </div>
    </div>
{% endblock %}