{% extends "AppBundle::layout.html.twig" %}
{% block main_content %}
    {{ parent() }}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">{{ 'app.module.responses'|trans({}, 'AppBundle') }}</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="data_table" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Question</th>
                            <th>Content</th>
                            <th>Attachement</th>
                            <th> </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for response in responses %}
                            <tr class="odd gradeX">
                                <td>{{ response.question.questiontext }}</td>
                                <td>{{ response.content }}</td>
                                <td>{{ response.attachement }}</td>
                                <td> {#
                    % include 'TrituxTestBundle:Default:actions.html.twig' with { 'object': box, 'route_edit': 'box_edit','delete': 'box' } %
                #}

                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>Question</th>
                            <th>Content</th>
                            <th>Attachement</th>
                            <th> </th>
                        </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
{% endblock %}